
<div id="header">
    <h1>Eat da Burger</h1>
</div>

<div id="added-burgers">
    <h2>Burgers to eat!</h2>

    <ul class="list">
    {{#each burgers}}
        {{#unless devoured}}
    <li>
            {{burger_name}} 
            <button class="eat" data-id="{{id}}">EAT</button>
                
        </li>       
        {{/unless}}
    {{/each}}
    </ul>

</div>

<div id="devoured-burgers">

    <h2>Devoured burgers</h2>

    <ul class="list">
    {{#each burgers}}
        {{#if devoured}}
        <li>{{ burger_name}}</li>
        {{/if}}
    {{/each}}
    </ul>

</div>

<div id="burger-form">

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger name</label>
    <input type="text" id="burger" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>