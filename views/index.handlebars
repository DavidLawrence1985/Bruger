<h1>Eat da Burger</h1>

<h2>Burgers to eat!</h2>

<ul class="list">
  {{#each burgers}}
    {{#unless devoured}}
    <li>{{burger_name}}
        <button id="eat" data-id="{{id}}" data-eaten="{{devoured}}">
		    {{#if devoured}}EAT{{/if}}
	    </button>
    </li> 
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured burgers</h2>

<ul class="list">
  {{#each burgers}}
    {{#if devoured}}
     <li>{{ burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>


<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger name</label>
    <input type="text" id="burger" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>
