<h1>Eat da Burger</h1>

<h2>Burgers to eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless }}
      {{> }}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured burgers</h2>

<ul>
  {{#each burgers}}
    {{#if }}
      {{> }}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger name</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy"></label><br>
    <input type="radio" name="sleepy" value="1" ><br>
    <input type="radio" name="sleepy" value="0"> 
  </div>

  <button type="submit">Add Burger</button>
</form>
